# ── Runtime
NODE_ENV=development
PORT=4100
TRUST_PROXY=1                      # 리버스프록시 뒤(도커)면 1 이상

# ── Database (Docker 네트워크)
DATABASE_URL=postgres://postgres:postgres@db:5432/tango
DB_SSLMODE=disable

# ── Redis (Docker 네트워크)
REDIS_URL=redis://redis:6379

# ── JWT
JWT_SECRET=supersecretkey123!@#        # 액세스 토큰(HS256)
JWT_REFRESH_SECRET=dev-refresh-secret-please-change # 리프레시 토큰용 시크릿
JWT_ACCESS_EXPIRES_MIN=30

# ── Session / Cookie / CORS
SESSION_SECRET=dev-session-secret-please-change    # 세션 암호화 키
AUTH_COOKIE=1
COOKIE_SECURE=false                # 개발환경(http)에서는 false
COOKIE_SAMESITE=Lax                # 프런트/백이 다른 호스트면 Lax 또는 None(https 필요)
COOKIE_DOMAIN=                     # 개발에선 비워두기

# Next dev가 출력한 네트워크 주소까지 포함(예: 172.22.160.1:3000)
FRONT_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://172.22.160.1:3000
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000,http://172.22.160.1:3000

# ── OTP / SMS
SMS_PROVIDER=mock
DEBUG_OTP=1
OTP_TTL_SEC=300
OTP_RATE_PER_PHONE=5
OTP_RATE_PHONE_WINDOW=600
OTP_RATE_PER_IP=20
OTP_RATE_IP_WINDOW=3600

# ── KYC
KYC_MIN_AGE=50
KYC=STUB
KYC_MODE=STUB

# ── 위치 자동완성
KAKAO_REST_KEY=카카오_REST_API_KEY    # 카카오 REST API 키
VWORLD_KEY=브이월드_API_KEY        # 브이월드 API 키

# ── 전화번호 암호화
PHONE_ENC_KEY=dev-32-bytes-minimum-secret-key     # 최소 32바이트 이상 시크릿 키
