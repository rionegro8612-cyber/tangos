# 테스트 환경 설정
NODE_ENV=test
PORT=4101
DATABASE_URL=postgres://postgres:postgres@localhost:5432/tango_test
REDIS_URL=redis://localhost:6379

# JWT 설정 (테스트용)
JWT_SECRET=test-secret-key-12345
JWT_ACCESS_EXPIRES_MIN=30
JWT_REFRESH_EXPIRES_DAYS=7

# OTP 설정 (테스트용 - 빠른 만료)
SMS_PROVIDER=mock
DEBUG_OTP=1
OTP_TTL=3
OTP_RESEND_COOLDOWN_SEC=60

# Rate Limit (테스트용 - 낮은 한도)
RATE_LIMIT_SMS_PER_MINUTE=2
RATE_LIMIT_SMS_PER_HOUR=3
OTP_RATE_PER_PHONE=2
OTP_RATE_PHONE_WINDOW=60
OTP_RATE_PER_IP=3
OTP_RATE_IP_WINDOW=60

# 멱등 캐시
IDEMPOTENCY_TTL_SEC=300

# 기타 설정
COOKIE_SECURE=false
COOKIE_DOMAIN=localhost
