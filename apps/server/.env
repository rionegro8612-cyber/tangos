# ── Server
NODE_ENV=development
PORT=4100
TRUST_PROXY=1

# ── Database (로컬 Postgres)
# 필요 DB만 남기고 하나로 통일하세요 (아래 예: 5433 포트)
DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5433/tango
DB_SSLMODE=disable   # 로컬이면 disable, 클라우드/SSL 필요시 require

# ── JWT (개발: HS256)
JWT_SECRET=supersecretkey123!@#
JWT_ACCESS_EXPIRES_MIN=30

# ── Cookie/CORS
AUTH_COOKIE=1
COOKIE_SECURE=false            # 로컬 HTTP라면 false
COOKIE_DOMAIN=                 # dev에선 비워두세요(현재 호스트에 귀속)
FRONT_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://172.22.160.1:3000

# ── OTP/SMS (dev에서 코드 노출)
SMS_PROVIDER=mock
DEBUG_OTP=1

# ── (선택) KYC
KYC_MIN_AGE=50

REDIS_URL=redis://localhost:6379
KYC_MODE=STUB      # STUB|PASS|NICE
KAKAO_REST_KEY=카카오_REST_API_KEY
VWORLD_KEY=브이월드_API_KEY

PHONE_ENC_KEY=dev-32-bytes-minimum-secret-key

