# ── Runtime
NODE_ENV=development
PORT=4100
TRUST_PROXY=1

# ── Database
# [Docker 실행 시] 컨테이너 네트워크 호스트명 사용 (db:5432)
DATABASE_URL=postgres://postgres:postgres@db:5432/tango
DB_SSLMODE=disable
# [로컬 단독 실행 시] 호스트 포트 매핑(5433) 사용
# DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5433/tango

# ── Redis
# [Docker] 컨테이너 호스트명
REDIS_URL=redis://redis:6379
# [로컬 단독] localhost
# REDIS_URL=redis://127.0.0.1:6379

# ── JWT (dev: HS256)
JWT_SECRET=supersecretkey123!@#
JWT_ACCESS_EXPIRES_MIN=30

# ── Cookie / CORS
AUTH_COOKIE=1
COOKIE_SECURE=false           # 개발(HTTP)에서는 false
COOKIE_SAMESITE=Lax          # 크로스도메인 필요하면 None(+ HTTPS 필요)
COOKIE_DOMAIN=               # 개발에선 비워두기
# 프런트 개발 도메인(쉼표구분). 서버 코드에 따라 두 키 중 하나를 사용하므로 둘 다 세팅.
FRONT_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# ── OTP / SMS
SMS_PROVIDER=mock
DEBUG_OTP=1
OTP_TTL_SEC=300               # 5분
OTP_RATE_PER_PHONE=5          # 10분 최대 5회
OTP_RATE_PHONE_WINDOW=600
OTP_RATE_PER_IP=20            # 1시간 최대 20회
OTP_RATE_IP_WINDOW=3600

# ── KYC
KYC_MIN_AGE=50
# 토글 키—코드에 따라 KYC 또는 KYC_MODE를 참조하는 경우가 있어 둘 다 세팅
KYC=STUB                      # STUB | PASS | NICE
KYC_MODE=STUB                 # 동일값 유지

# ── 위치 자동완성(키 없으면 로컬 JSON 폴백)
KAKAO_REST_KEY=카카오_REST_API_KEY
VWORLD_KEY=브이월드_API_KEY

# ── 전화번호 암호화(트리거용 키) — 운영은 더 강한 키로
PHONE_ENC_KEY=dev-32-bytes-minimum-secret-key
