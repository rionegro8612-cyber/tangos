# 스테이징 환경 설정
NODE_ENV=production
PORT=4100

DATABASE_URL=postgres://postgres:postgres@db:5432/tango

JWT_ACCESS_EXPIRES_MIN=30
JWT_REFRESH_EXPIRES_DAYS=30
JWT_SECRET=change_me_to_a_long_random_string
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

AUTH_COOKIE=1
COOKIE_SECURE=true
COOKIE_SAMESITE=None
COOKIE_DOMAIN=.staging.yourdomain.com
FRONT_ORIGINS=https://staging.yourdomain.com
CORS_ORIGIN=https://staging.yourdomain.com

OTP_CODE_TTL_SEC=180
OTP_RESEND_COOLDOWN_SEC=60
SMS_PROVIDER=twilio
DEBUG_OTP=0

# 보안 강화
TRUST_PROXY=1
FORCE_HTTPS=true

